<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="name.caiyao.skinCheck" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".UI.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.SexSelectActivity"
            android:label="@string/title_activity_sex_select" >
        </activity>
        <activity
            android:name=".UI.SetInfoActivity"
            android:label="@string/title_activity_set_info" >
        </activity>
        <activity
            android:name=".UI.SkinCheckActivity"
            android:label="@string/title_activity_skin_check" >
        </activity>
        <activity
            android:name=".UI.LoginActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:label="LoginActivity" >
        </activity>
        <activity
            android:name=".UI.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".UI.BluetoothListActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:label="@string/title_activity_bluetooth_list" >
        </activity>

        <service
            android:name=".Service.BluetoothService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
